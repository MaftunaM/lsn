<form class="col s12" action="/lessons/update/" method="post">
    <div class="row">
        <div class="input-field col s6">
            <input class="validate" id="name" type="text" name="name" /value="{{lesson.name}}">
            <label for="name">Name</label>
        </div>
        <div class="input-field col s6">
            <input class="validate" id="author" type="text" name="author" value="{{lesson.author}}" />
            <label for="author">Author</label>
        </div>
        <div class="input-field col s6">
            <input class="validate" id="price" type="text" name="price" value="{{lesson.price}}" />
            <label for="price">Price</label>
        </div>
        <div class="input-field col s6">
            <input class="validate" id="img" type="text" name="img" value="{{lesson.img}}" />
            <label for="img">Img</label>
        </div>
        <div class="input-field col s6">
            <input class="validate" id="year" type="number" name="year" value="{{lesson.year}}"/>
            <label for="year">Year</label>
        </div>
        <input type="hidden" value="{{lesson.id}}" name="id">
    </div>
    <button class="waves-effect waves-light btn">Create</button>
</form>