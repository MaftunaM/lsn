extends layouts/layout
block content   
    form.col.s12(action=`/api/lessons/update/${lesson.id}` method="post")
        .row
            .input-field.col.s6
                input#name.validate(type='text' name="name" value=lesson.name)
                label(for='name') Name
            .input-field.col.s6
                input#author.validate(type='text' name="author" value=lesson.author)
                label(for='author') Author
            .input-field.col.s6
                input#price.validate(type='text' name="price" value=lesson.price)
                label(for='price') Price
            .input-field.col.s6
                input#img.validate(type='text' name="img" value=lesson.img)
                label(for='img') Img
            .input-field.col.s6
                input#year.validate(type='number' name="year" value=lesson.year)
                label(for='year') Year
        button(class="waves-effect waves-light btn") Create